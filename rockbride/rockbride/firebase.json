{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/photography",
        "destination": "/photography.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/en",
        "destination": "/en/index.html"
      },
      {
        "source": "/en/photography",
        "destination": "/en/photography.html"
      },
      {
        "source": "/en/contact",
        "destination": "/en/contact.html"
      },
      {
        "source": "/es",
        "destination": "/es/index.html"
      },
      {
        "source": "/es/photography",
        "destination": "/es/photography.html"
      },
      {
        "source": "/es/contact",
        "destination": "/es/contact.html"
      },
      {
        "source": "/tr",
        "destination": "/tr/index.html"
      },
      {
        "source": "/tr/photography",
        "destination": "/tr/photography.html"
      },
      {
        "source": "/tr/contact",
        "destination": "/tr/contact.html"
      },
      {
        "source": "/fr",
        "destination": "/fr/index.html"
      },
      {
        "source": "/fr/photography",
        "destination": "/fr/photography.html"
      },
      {
        "source": "/fr/contact",
        "destination": "/fr/contact.html"
      },
      {
        "source": "/photography/*",
        "destination": "/photography.html"
      },
      {
        "source": "/contact/*",
        "destination": "/contact.html"
      },
      {
        "source": "/en/*",
        "destination": "/en/index.html"
      },
      {
        "source": "/es/*",
        "destination": "/es/index.html"
      },
      {
        "source": "/tr/*",
        "destination": "/tr/index.html"
      },
      {
        "source": "/fr/*",
        "destination": "/fr/index.html"
      }
    ],
    "errorPages": [
      {
        "source": "/404",
        "destination": "/404.html"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "**/*.bat", "src/**"]
  }
}
